// Constructor and Destructor in C++
#include<iostream>
using namespace std;

class Math {
public:
    Math() { // Constructor     
    }
    
    void addition(int a, int b) {
        cout << a << " + " << b << " = " << (a + b); 
    }

    ~Math() { // Destructor
    }
};

int main() {
    Math o;
    o.addition(5, 3);
    return 0;
}
